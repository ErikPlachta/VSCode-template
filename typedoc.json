{
  "entryPoints": ["src"],
  "entryPointStrategy": "expand",
  "tsconfig": "tsconfig.typedoc.json",
  "out": "docs",
  "includeVersion": true,
  "excludePrivate": true,
  "excludeProtected": true,
  "exclude": ["**/*.old.ts"],
  "plugin": ["typedoc-plugin-markdown"],
  // Front matter is injected in a post-processing step (src/tools/augmentTypedoc.ts)
  // so we keep this config focused on generation only.
  // Avoid "API" wording: these docs describe internal extension & agent code.
  "readme": "README.md",
  "hideGenerator": true
}
