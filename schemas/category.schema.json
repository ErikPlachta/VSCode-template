{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/category.schema.json",
  "type": "object",
  "required": ["id", "name", "description", "aliases", "config"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "aliases": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "config": {
      "type": "object",
      "required": ["purpose", "primaryKeys", "updateCadence", "access", "requirements", "orchestration"],
      "additionalProperties": false,
      "properties": {
        "purpose": {
          "type": "string",
          "minLength": 1
        },
        "primaryKeys": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1
        },
        "updateCadence": {
          "type": "string",
          "minLength": 1
        },
        "access": {
          "type": "string",
          "minLength": 1
        },
        "requirements": {
          "type": "object",
          "required": ["requiredRecordFields", "requiredRelationshipFields", "notes"],
          "additionalProperties": false,
          "properties": {
            "requiredRecordFields": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1
              },
              "minItems": 1
            },
            "requiredRelationshipFields": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1
              },
              "minItems": 1
            },
            "notes": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        },
        "orchestration": {
          "type": "object",
          "required": ["summary", "signals", "escalateWhen", "agents"],
          "additionalProperties": false,
          "properties": {
            "summary": {
              "type": "string",
              "minLength": 1
            },
            "signals": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1
              },
              "minItems": 1
            },
            "escalateWhen": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1
              }
            },
            "agents": {
              "type": "object",
              "minProperties": 1,
              "additionalProperties": {
                "type": "object",
                "required": ["focus", "signals", "promptStarters"],
                "additionalProperties": false,
                "properties": {
                  "focus": {
                    "type": "string",
                    "minLength": 1
                  },
                  "signals": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "minLength": 1
                    },
                    "minItems": 1
                  },
                  "promptStarters": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "minLength": 1
                    },
                    "minItems": 1
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
