{
  "name": "mybusiness-mcp-extension",
  "displayName": "My Business MCP Extension",
  "description": "Auto-syncs MCP tools into VS Code Copilot Chat with full test suite and documentation.",
  "version": "1.0.0",
  "type": "module",
  "publisher": "ErikPlachta",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ErikPlachta/vscode-extension-mcp-server.git"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "activationEvents": [
    "onStartupFinished",
    "onCommand:mybusinessMCP.invokeTool",
    "onCommand:mybusinessMCP.registerServer",
    "onCommand:mybusinessMCP.unregisterServer",
    "onChatParticipant:MybusinessMCP"
  ],
  "main": "./out/src/extension/index.js",
  "contributes": {
    "commands": [
      {
        "command": "mybusinessMCP.invokeTool",
        "title": "My Business MCP Extension: Invoke Tool"
      },
      {
        "command": "mybusinessMCP.registerServer",
        "title": "My Business MCP Extension: Register MCP Server"
      },
      {
        "command": "mybusinessMCP.unregisterServer",
        "title": "My Business MCP Extension: Unregister MCP Server"
      },
      {
        "command": "mybusinessMCP.diagnoseIds",
        "title": "My Business MCP Extension: Diagnose Chat IDs"
      }
    ],
    "mcpServerDefinitionProviders": [
      {
        "id": "mybusiness-local",
        "label": "My Business MCP Extension Embedded Server"
      }
    ],
    "chatParticipants": [
      {
        "id": "MybusinessMCP",
        "name": "mybusiness",
        "description": "Access your business data including applications, departments, people, policies, and resources",
        "isSticky": true
      }
    ],
    "configuration": {
      "title": "My Business MCP Extension Settings",
      "properties": {
        "mybusinessMCP.serverUrl": {
          "type": "string",
          "default": "",
          "description": "External MCP server URL (leave blank to use embedded)."
        },
        "mybusinessMCP.token": {
          "type": "string",
          "description": "Bearer token for MCP authentication."
        },
        "mybusinessMCP.autoRegister": {
          "type": "boolean",
          "default": false,
          "description": "Automatically register embedded server in global mcp.json."
        },
        "mybusinessMCP.port": {
          "type": "number",
          "default": 39200,
          "minimum": 1024,
          "maximum": 65535,
          "description": "Port for embedded HTTP JSON-RPC server."
        },
        "mybusinessMCP.registerServerId": {
          "type": "string",
          "default": "Mybusiness",
          "description": "Server id key used inside mcp.json servers object."
        },
        "mybusinessMCP.includeAuthHeader": {
          "type": "boolean",
          "default": false,
          "description": "Include Authorization header metadata when registering HTTP server in mcp.json."
        },
        "mybusinessMCP.ids.chatParticipantId": {
          "type": "string",
          "enum": [
            "MybusinessMCP"
          ],
          "markdownDescription": "Read-only. Current chat participant id as contributed (activation event)."
        },
        "mybusinessMCP.ids.chatParticipantName": {
          "type": "string",
          "enum": [
            "mybusiness"
          ],
          "markdownDescription": "Read-only. Current mention name (use @<name> in chat)."
        },
        "mybusinessMCP.ids.commandPrefix": {
          "type": "string",
          "enum": [
            "mybusinessMCP"
          ],
          "markdownDescription": "Read-only. Current command/settings prefix."
        },
        "mybusinessMCP.ids.activationEventId": {
          "type": "string",
          "enum": [
            "MybusinessMCP"
          ],
          "markdownDescription": "Read-only. Activation event id (onChatParticipant:<id>)."
        },
        "mybusinessMCP.ids.extensionId": {
          "type": "string",
          "enum": [
            "ErikPlachta.mybusiness-mcp-extension"
          ],
          "markdownDescription": "Read-only. Extension identifier (publisher.name)."
        },
        "mybusinessMCP.ids.serverRegisterId": {
          "type": "string",
          "enum": [
            "Mybusiness"
          ],
          "markdownDescription": "Read-only. Server id key used in mcp.json servers."
        }
      }
    }
  },
  "scripts": {
    "config": "tsx bin/utils/updatePackageConfig.ts",
    "templates": "tsx bin/utils/processTemplates.ts",
    "prebuild": "npm run config && npm run mcp:gen && npm run templates",
    "build": "npm run prebuild && npm run compile && tsx bin/utils/aliasToRelativeOut.ts",
    "build:pipeline": "bash bin/build.sh",
    "build:pipeline:win": "bin\\build.bat",
    "build:full": "bash bin/build.sh --strict-lint --strict-health",
    "build:quick": "bash bin/build.sh --stages compile,test --no-coverage",
    "build:clean": "bash bin/build.sh --deep-clean",
    "deploy": "bash bin/build.sh --update-version",
    "lint": "eslint \"src/**/*.ts\" --max-warnings=0",
    "lint:json": "tsx bin/utils/validateJson.ts",
    "lint:docs": "tsx bin/utils/validateMarkdown.ts",
    "health:report": "tsx src/tools/repositoryHealth.ts",
    "test": "npm run templates && cross-env NODE_OPTIONS=--experimental-vm-modules jest --config=jest.config.js --runInBand --ci",
    "docs": "tsx bin/utils/cleanDocs.ts && typedoc && npm run docs:fix && npm run health:report && npm run docs:nav",
    "docs:nav": "tsx bin/utils/buildDocsNav.ts",
    "docs:fix": "tsx bin/utils/postprocessDocs.ts",
    "fix:imports": "tsx bin/utils/convertRelativeImports.ts",
    "compile": "tsc -p ./",
    "mcp:gen": "tsx src/tools/generateMcpConfig.ts",
    "package": "npm run build && npx vsce package",
    "prepublishOnly": "npm run prebuild",
    "install": "code --install-extension mybusiness-mcp-extension-1.0.0.vsix",
    "server": "npm run compile -- --pretty false && node ./out/server/index.js",
    "changelog:manage": "tsx bin/utils/changelog",
    "changelog:add-entry": "npm run changelog:manage -- add-entry --type fix --summary \"Placeholder summary (override)\"",
    "changelog:add-outstanding": "npm run changelog:manage -- add-outstanding --priority 2 --text \"Placeholder task (override)\"",
    "changelog:add-current": "npm run changelog:manage -- add-current --text \"Placeholder current task (override)\"",
    "changelog:prune": "npm run changelog:manage -- prune-completed"
  },
  "dependencies": {
    "fast-glob": "^3.3.2",
    "gray-matter": "^4.0.3",
    "package": "^1.0.1"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/eslint": "^9.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vscode/vsce": "^3.2.0",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-jsdoc": "^61.1.12",
    "jest": "^30.2.0",
    "markdownlint": "^0.39.0",
    "ts-jest": "^29.2.5",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3"
  }
}
