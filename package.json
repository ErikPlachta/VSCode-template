{
  "name": "mybusiness-mcp-extension",
  "displayName": "My Business MCP Extension",
  "description": "Auto-syncs MCP tools into VS Code Copilot Chat with full test suite and documentation.",
  "version": "1.0.0",
  "publisher": "myorg",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ErikPlachta/VSCode-template.git"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "activationEvents": [
    "onStartupFinished",
    "onCommand:mybusinessMCP.invokeTool",
    "onCommand:mybusinessMCP.registerServer",
    "onCommand:mybusinessMCP.unregisterServer",
    "onChatParticipant:MyBusinessMCP"
  ],
  "main": "./out/extension/index.js",
  "contributes": {
    "commands": [
      {
        "command": "mybusinessMCP.invokeTool",
        "title": "My Business MCP: Invoke Tool"
      },
      {
        "command": "mybusinessMCP.registerServer",
        "title": "My Business MCP: Register MCP Server"
      },
      {
        "command": "mybusinessMCP.unregisterServer",
        "title": "My Business MCP: Unregister MCP Server"
      }
    ],
    "mcpServerDefinitionProviders": [
      {
        "id": "mybusiness-local",
        "label": "My Business Embedded Server"
      }
    ],
    "chatParticipants": [
      {
        "id": "MyBusinessMCP",
        "name": "mybusiness",
        "description": "Access your business data including applications, departments, people, policies, and resources",
        "isSticky": true
      }
    ],
    "configuration": {
      "title": "My Business MCP Settings",
      "properties": {
        "mybusinessMCP.serverUrl": {
          "type": "string",
          "default": "",
          "description": "External MCP server URL (leave blank to use embedded)."
        },
        "mybusinessMCP.token": {
          "type": "string",
          "description": "Bearer token for MCP authentication."
        },
        "mybusinessMCP.autoRegister": {
          "type": "boolean",
          "default": true,
          "description": "Automatically register embedded server in global mcp.json."
        },
        "mybusinessMCP.port": {
          "type": "number",
          "default": 39200,
          "minimum": 1024,
          "maximum": 65535,
          "description": "Port for embedded HTTP JSON-RPC server."
        },
        "mybusinessMCP.registerServerId": {
          "type": "string",
          "default": "mybusiness",
          "description": "Server id key used inside mcp.json 'servers' object."
        },
        "mybusinessMCP.includeAuthHeader": {
          "type": "boolean",
          "default": false,
          "description": "Include Authorization header metadata when registering HTTP server in mcp.json."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint \"src/**/*.ts\" --max-warnings=0",
    "lint:json": "npm run compile -- --pretty false && node ./out/tools/validateJson.js",
    "lint:docs": "npm run compile -- --pretty false && node ./out/tools/validateMarkdown.js",
    "health:report": "npm run compile -- --pretty false && node ./out/agent/repositoryHealthRunner.js",
    "test": "jest --runInBand --ci",
    "docs": "typedoc",
    "compile": "tsc -p ./",
    "package": "npx vsce package",
    "install": "code --install-extension mybusiness-mcp-extension-1.0.0.vsix",
    "server": "npm run compile -- --pretty false && node ./out/server/index.js"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "axios": "^1.7.8",
    "fast-glob": "^3.3.2",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vscode/vsce": "^3.2.0",
    "eslint": "^9.39.1",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-jsdoc": "^61.1.12",
    "jest": "^30.2.0",
    "markdownlint": "^0.39.0",
    "ts-jest": "^29.2.5",
    "tsconfig-paths": "^4.2.0",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3"
  }
}
