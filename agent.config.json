{
  "typescript": {
    "include": ["src/**/*.ts"]
  },
  "jsonSchemas": [
    {
      "pattern": "data/*/category.json",
      "schema": "schemas/category.schema.json",
      "description": "Category metadata must define purpose, orchestration, and agent responsibilities."
    },
    {
      "pattern": "data/*/records.json",
      "schema": "schemas/records.schema.json",
      "description": "Entity records require identifiers, human-readable names, and linkage metadata."
    },
    {
      "pattern": "data/*/relationships.json",
      "schema": "schemas/relationships.schema.json",
      "description": "Relationship definitions must clearly communicate target categories and join keys."
    }
  ],
  "markdown": {
    "include": ["docs/**/*.md"],
    "exclude": ["docs/api/**"],
    "requiredFrontMatter": ["title", "summary", "roles", "associations", "hierarchy"],
    "requiredSections": [
      "## Summary",
      "## Responsibilities",
      "## Inputs",
      "## Outputs",
      "## Error Handling",
      "## Examples",
      "## Maintenance"
    ]
  },
  "report": {
    "output": "docs/reports/health-report.md"
  }
}
