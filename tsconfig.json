{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2021"],
    "strict": true,
    "esModuleInterop": true,
    "outDir": "out",
    "rootDir": ".",
    "skipLibCheck": true,
    "types": ["node", "vscode", "jest", "eslint"],
    "baseUrl": ".",
    "paths": {
      "@agent/*": ["src/agent/*"],
      "@extension/*": ["src/extension/*"],
      "@mcp/*": ["src/mcp/*"],
      "@server/*": ["src/server/*"],
      "@shared/*": ["src/shared/*"],
      "@tools/*": ["src/tools/*"],
      "@types/*": ["src/types/*"],
      "@bin/*": ["bin/*"]
    }
  },
  "include": ["src", "bin"],
  "exclude": [
    "node_modules",
    "out",
    "bin/tests",
    "jest.config.js",
    "*.config.js"
  ]
}
