# Environment Configuration for VSCode Extension Template
# Copy this to .env and customize for your project

# Application/Business Name (used for extension and server naming)
APP_NAME=yourappname
APP_DISPLAY_NAME=Your App Name

# Extension Configuration
EXTENSION_NAME=yourappname-mcp-extension
EXTENSION_DISPLAY_NAME=Your App Name MCP Extension
EXTENSION_DESCRIPTION=Your custom description for the MCP extension.
EXTENSION_PUBLISHER=yourpublisher

# MCP Server Configuration  
MCP_SERVER_ID=yourappname
MCP_CHAT_PARTICIPANT_ID=yourappname
MCP_CHAT_PARTICIPANT_NAME=yourappname

# Default Settings
MCP_DEFAULT_PORT=39200
MCP_AUTO_REGISTER=true
MCP_INCLUDE_AUTH_HEADER=false