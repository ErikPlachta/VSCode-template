{
  "$schema": "../../schemas/agent.config.schema.json",
  "agent": {
    "id": "orchestrator",
    "name": "Orchestrator",
    "version": "1.0.0",
    "description": "Routes questions to appropriate agents based on intent classification"
  },
  "orchestration": {
    "intents": {
      "metadata": {
        "name": "metadata",
        "description": "Requests for category metadata, schemas, and data structure information",
        "targetAgent": "relevant-data-manager",
        "signals": [
          "routing",
          "coordination",
          "intent",
          "workflow",
          "schema",
          "metadata",
          "catalogue",
          "snapshot"
        ]
      },
      "records": {
        "name": "records",
        "description": "Requests for specific record searches and filtering",
        "targetAgent": "database-agent",
        "signals": ["query", "records", "filter", "list", "search", "find"]
      },
      "insight": {
        "name": "insight",
        "description": "Requests for data analysis, insights, and exploration plans",
        "targetAgent": "data-agent",
        "signals": [
          "insight",
          "plan",
          "narrative",
          "connections",
          "analysis",
          "explore"
        ]
      },
      "clarification": {
        "name": "clarification",
        "description": "Fallback for unclear or ambiguous requests",
        "targetAgent": "clarification-agent",
        "signals": [
          "unclear",
          "unknown",
          "missing context",
          "help",
          "what",
          "how"
        ]
      }
    },
    "textProcessing": {
      "stopWords": [
        "the",
        "and",
        "that",
        "this",
        "with",
        "into",
        "from",
        "will",
        "they",
        "their",
        "them",
        "what",
        "when",
        "have",
        "such",
        "like",
        "your",
        "more",
        "also",
        "than",
        "should",
        "before",
        "after",
        "each",
        "within",
        "without",
        "about",
        "using",
        "based"
      ],
      "minimumKeywordLength": 3,
      "scoringWeights": {
        "signalMatch": 2,
        "focusMatch": 3,
        "promptStarterMatch": 1
      }
    },
    "escalation": {
      "conditions": [
        "no suitable agent found",
        "multiple agents conflict",
        "insufficient context provided"
      ],
      "fallbackAgent": "clarification-agent",
      "maxRetries": 2
    }
  },
  "execution": {
    "priority": "high",
    "timeout": 30000,
    "cacheEnabled": false,
    "retryStrategy": "fixed",
    "maxRetries": 2
  },
  "userFacing": {
    "friendlyDescription": "I'm the coordinator who figures out which specialized agent can best help you with your question.",
    "useWhen": [
      "You have a complex question that might need multiple agents",
      "Your request is ambiguous and needs to be routed properly",
      "You want to understand what capabilities are available"
    ],
    "exampleQueries": [
      "Can you help me find information about our company policies?",
      "I need to understand how departments connect to our applications",
      "What can you help me with?"
    ],
    "helpText": "Ask me anything about your business data and I'll route your question to the right specialist."
  },
  "applicationFacing": {
    "technicalDescription": "Central routing agent that analyzes user intent and directs requests to appropriate specialized agents",
    "dependencies": ["clarification-agent", "relevant-data-manager"],
    "capabilities": [
      "intent-classification",
      "agent-routing",
      "workflow-coordination",
      "escalation-management",
      "coordination-management",
      "request-synthesis"
    ],
    "performance": {
      "expectedResponseTime": 500,
      "memoryUsage": "low",
      "complexity": "medium"
    },
    "errorHandling": {
      "retryStrategy": "fixed",
      "maxRetries": 2,
      "fallbackAgent": "clarification-agent"
    },
    "monitoring": {
      "metricsToTrack": [
        "routing_accuracy",
        "response_time",
        "escalation_rate",
        "intent_classification_confidence"
      ],
      "alertThresholds": {
        "response_time_ms": 1000,
        "error_rate_percent": 5,
        "escalation_rate_percent": 20
      }
    }
  }
}
