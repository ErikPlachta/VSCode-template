{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/records.schema.json",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id"],
    "anyOf": [
      { "required": ["name"] },
      { "required": ["title"] }
    ],
    "properties": {
      "id": {
        "type": "string",
        "minLength": 1
      },
      "name": {
        "type": "string",
        "minLength": 1
      },
      "title": {
        "type": "string",
        "minLength": 1
      },
      "description": {
        "type": "string"
      },
      "role": {
        "type": "string"
      },
      "departmentId": {
        "type": "string"
      },
      "managerId": {
        "type": ["string", "null"]
      },
      "location": {
        "type": "string"
      },
      "skills": {
        "type": "array",
        "items": {
          "type": "string",
          "minLength": 1
        }
      },
      "applicationIds": {
        "type": "array",
        "items": {
          "type": "string",
          "minLength": 1
        }
      },
      "policyAcks": {
        "type": "array",
        "items": {
          "type": "string",
          "minLength": 1
        }
      },
      "resourceIds": {
        "type": "array",
        "items": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "additionalProperties": true
  }
}
