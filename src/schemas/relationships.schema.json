{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/relationships.schema.json",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["key", "name", "description", "targetCategory", "sourceField", "targetField", "cardinality"],
    "additionalProperties": false,
    "properties": {
      "key": {
        "type": "string",
        "minLength": 1
      },
      "name": {
        "type": "string",
        "minLength": 1
      },
      "description": {
        "type": "string",
        "minLength": 1
      },
      "targetCategory": {
        "type": "string",
        "minLength": 1
      },
      "sourceField": {
        "type": "string",
        "minLength": 1
      },
      "targetField": {
        "type": "string",
        "minLength": 1
      },
      "cardinality": {
        "type": "string",
        "enum": ["one", "many"]
      }
    }
  }
}
